name: "LeNet"
node {
  name: "data"
  type: "LMDBData"
  top: "data"
  top: "label"
  propagate_down: false
  mode: TRAIN
  data_param {
    train_source: "/lfs/est03_s/mnist-db/mnist_train_lmdb"
    test_source: "/lfs/est03_s/mnist-db/mnist_test_lmdb"
    batch_size: 64
    num_train_files: 60000
    num_test_files: 10000

    image_xform_param {
      orig_size: 28
      channels: 1
      scale_values: 0.00390625
    }
  }
}
node {
  name: "conv1"
  type: "Convolution"
  bottom: "data"
  top: "conv1"
  propagate_down: false
  param {
    lr_mult: 1
    decay_mult: 1
  }
  param {
    lr_mult: 2
    decay_mult: 1
  }
  convolution_param {
    engine: MKL
    num_output: 20
    kernel_size: 5
    stride: 1
    weight_filler {
      type: "XAVIER"
    }
    bias_filler {
      type: "constant"
      value: 0
    }
  }
}
node {
  name: "pool1"
  type: "Pooling"
  bottom: "conv1"
  top: "pool1"
  pooling_param {
    engine: MKL
    pool: MAX
    kernel_size: 2
    stride: 2
  }
}
node {
  name: "conv2"
  type: "Convolution"
  bottom: "pool1"
  top: "conv2"
  param {
    lr_mult: 1
    decay_mult: 1
  }
  param {
    lr_mult: 2
    decay_mult: 1
  }
  convolution_param {
    engine: MKL
    num_output: 50
    kernel_size: 5
    stride: 1
    weight_filler {
      type: "XAVIER"
    }
    bias_filler {
      type: "constant"
      value: 0
    }
  }
}
node {
  name: "pool2"
  type: "Pooling"
  bottom: "conv2"
  top: "pool2"
  pooling_param {
    engine: MKL
    pool: MAX
    kernel_size: 2
    stride: 2
  }
}
node {
  name: "ip1"
  type: "FullyConnected"
  bottom: "pool2"
  top: "ip1"
  param {
    lr_mult: 1
    decay_mult: 1
  }
  param {
    lr_mult: 2
    decay_mult: 1
  }
  fc_param {
    engine: BLAS
    num_output: 500
    weight_filler {
      type: "XAVIER"
    }
    bias_filler {
      type: "constant"
      value: 0
    }
  }
}
node {
  name: "relu1"
  type: "ReLU"
  bottom: "ip1"
  top: "relu1"
  relu_param {
    engine: MKL
  }
}
node {
  name: "ip2"
  type: "FullyConnected"
  bottom: "relu1"
  top: "ip2"
  param {
    lr_mult: 1
    decay_mult: 1
  }
  param {
    lr_mult: 2
    decay_mult: 1
  }
  fc_param {
    engine: BLAS
    num_output: 10
    weight_filler {
      type: "XAVIER"
    }
    bias_filler {
      type: "constant"
      value: 0
    }
  }
}
node {
  name: "accuracy"
  type: "Accuracy"
  bottom: "ip2"
  bottom: "label"
  top: "accuracy"
  propagate_down: false
  accuracy_param {
    top_k: 1
  }
}
node {
  name: "loss"
  type: "SoftmaxWithLoss"
  bottom: "ip2"
  bottom: "label"
  top: "loss"
  loss_weight: 1
}
